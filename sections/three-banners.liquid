<div class="display">
  <ul class="three-banner">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'banner-item' %}
          <li class="banner-item">
            {% if block.settings['banner-image'] == blank %}
              {{ 'image' | placeholder_svg_tag: item-image-banner }}
            {% else %}
              <img src="{{block.settings.banner-image | image_url}}" class="item-image-banner">
            {% endif %}
            <div class="title-3banner">
              <div class="title-banner">{{ block.settings['title-banner'] }}</div>
              {% comment %} <a href="#" class="sub-title-banner">{{ block.settings['sub-title-banner'] }}</a> {% endcomment %}
              {{ block.settings['sub-title-banner'] | link_to: block.settings.sub-title-link, class:'sub-title-banner'}}

            </div>
          </li>
      {% endcase %}
    {% endfor %}
  </ul>
  {% if section.blocks != blank %}
    <hr class="break-banner">
  {% endif %}
</div>
<style>
  .display {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .three-banner {
    display: flex;
    margin: 0 300px;
    justify-content: center;
    width: 100%;
  }
  .banner-item {
    margin: 0 1px;
    display: flex;
    width: 332px;
    height: 300px;
    flex-direction: column;
    align-items: center;
  }
  .title-3banner {
    text-align: center;
    font-size: 20px;
    font-weight: 500;
  }
  .title-banner {
    margin: 20px 0 10px 0;
  }
  .sub-title-banner {
    text-decoration: underline;
    font-size: 14px;
    font-weight: 400;
    cursor: pointer;
  }
  .sub-title-banner:hover {
    color: #81624a;
  }
  .break-banner {
    width: 95%;
    text-align: center;
    margin-top: 150px;
    border-top: 1px solid #e6e6e6;
  }
  @media (max-width: 640px) {
    .display {
      display: flex;
      flex-direction: column;
      padding: 25px 0 0 0;
    }
    .banner-item {
      width: 212px;
      height: auto;
    }
    .title-3banner {
      font-size: 16px;
    }
    .title-banner {
      margin: 10px 0 5px 0;
    }
    .sub-title-banner {
      font-size: 13px;
    }
    .three-banner {
      padding: 0 12px;
      overflow-x: scroll;
      justify-content: flex-start;
    }
    .item-image-banner {
      width: 212px;
      height: 191px;
    }
    .break-banner {
      margin-top: 39px;
    }
  }
</style>

{% schema %}
{
  "name": "three-banners",
  "settings": [],
  "blocks": [
    {
      "name": "banner-item",
      "type": "banner-item",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner-image",
          "label": "Edit banner image"
        },
        {
          "type": "text",
          "id": "title-banner",
          "label": "Edit title banner",
          "default": " Title banner"
        },
        {
          "type": "text",
          "id": "sub-title-banner",
          "label": "Edit text show more",
          "default": "Show more"
        },
        {
          "type": "url",
          "id": "sub-title-link",
          "label": "Add link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "collection"
    }
  ]
}
{% endschema %}

